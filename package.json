{
  "name": "jira-zephyr-mcp",
  "version": "1.0.1",
  "description": "MCP server for integrating with JIRA's Zephyr test management system",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "jira-zephyr-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts && echo '#!/usr/bin/env node' | cat - dist/index.js > temp && mv temp dist/index.js && chmod +x dist/index.js",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "jira",
    "zephyr",
    "test-management",
    "testing",
    "model-context-protocol"
  ],
  "author": "Renan Victor Lalier Carreira <relalier@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/renanlalier/jira-zephyr-mcp.git"
  },
  "homepage": "https://github.com/renanlalier/jira-zephyr-mcp#readme",
  "bugs": {
    "url": "https://github.com/renanlalier/jira-zephyr-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0",
    "dotenv": "^16.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "puppeteer": "^24.22.3",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
